<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jp.ac.titech.itpro.sdl.blescanner.MainActivity">

    <ProgressBar
        android:id="@+id/scan_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ListView
        android:id="@+id/dev_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        >
    <Button
        android:id="@+id/ReadRssi_button"
        android:text="Rssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickReadRssiButton"/>

    <Button
        android:id="@+id/TxPower_button"
        android:text="TxPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickTxPowerButton"/>

        <Button
            android:id="@+id/link_loss_button"
            android:text="Link Loss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickLinkLossButton"/>

    <Button
        android:id="@+id/alert_button"
        android:text="Alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickAlertButton"/>
    </LinearLayout>
</LinearLayout>
